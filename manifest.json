{
    "manifest_version" : 3,
    "name" : "Images on Demand",
    "version" : "0.1",
    "description" : "Delay the loading of images on website, until the user wishes to load the image.",
    "icons" : {
       "48" : "icons/border-48.png"
    },
    "content_scripts" : [
        {
            "matches" : [
                "http://*/*",
                "https://*/*"
            ],
            "js" : [
                "js/content.js"
            ]
        }
    ],
    "permissions" : [
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "action" : {
        "default_icon" : "icons/border-48.png",
        "default_title" : "Image delayer"
    },
    "background" : {
        "scripts": ["background.js"]
    }
}